{
  "name": "realauncher",
  "version": "1.0.0",
  "type": "module",
  "description": "A beautiful Minecraft Mod Launcher",
  "main": "dist-electron/main.js",
  "author": "ReaLauncher",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:ver": "npm version --no-git-tag-version --allow-same-version",
    "postbuild:ver": "npm run build",
    "preview": "vite preview",
    "typecheck": "tsc -b",
    "lint": "eslint src electron --ext .ts,.tsx",
    "clean": "rimraf dist dist-electron release"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "dependencies": {
    "@azure/msal-node": "^2.16.2",
    "@tanstack/react-query": "^5.62.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "eml-lib": "^2.0.0-beta.19",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "minecraft-launcher-core": "^3.18.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.1.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/axios": "^0.9.36",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.realauncher.app",
    "productName": "ReaLauncher",
    "executableName": "ReaLauncher",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}.Portable.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName}-${version}.Setup.${ext}",
      "include": "build/installer.nsh"
    }
  }
}
